temp, unit = input("Input Temperature: ").split()
   

if unit == 'C' or unit == 'c':
    
    choice = input("Convert to Farenheit(f) or Kelvin(k)? ")
        
    if choice == 'F' or choice == 'f':
        fahrenheit = float(temp)*(9/5) + 32
        print(f"The temperature in Fahrenheit is", str(fahrenheit), "F")
        
    elif choice == 'K' or choice == 'k':
        kelvin = float(temp) + 273.15
        print(f"The temperature in Kelvin is", str(kelvin), "K")
        
    else:
        print("Invalid Input")

elif unit == 'F' or unit == 'f':
    
    choice = input("Convert to Celsius(c) or Kelvin(k)? ")
        
    if choice == 'C' or choice == 'c':
        celsius = (float(temp)-32)*(5/9)
        print(f"The temperature in Celsius is", str(celsius), "C")
        
    elif choice == 'K' or choice == 'k':
        kelvin = (float(temp)-32)*(5/9) + 273.15
        print(f"The temperature in Kelvin is", str(kelvin), "K")
        
    else:
        print("Invalid Input")
        
elif unit == 'K' or unit == 'k':
    
    choice = input("Convert to Celsius(c) or Fahrenheit(f)? ")
        
    if choice == 'C' or choice == 'c':
        celsius = float(temp) - 273.15
        print(f"The temperature in Celsius is", str(celsius), "C")
        
    elif choice == 'F' or choice == 'f':
        fahrenheit = (float(temp) - 273.15) * (9/5) + 32
        print(f"The temperature in Fahrenheit is", str(fahrenheit), "F")
        
    else:
        print("Invalid Input")
        
else:
    print("Invalid Input")
